/dts-v1/;
/plugin/;


/ {
	compatible = "brcm,bcm2711";

	fragment@0 {
		target-path = "/soc/i2c@7e804000";
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			psoc4_capsense@D {
				compatible = "infineon,psoc4-capsense";
				reg = <0x0D>;
				interrupt-parent = <&gpio>;
				interrupts = <17 0x02>; // GPIO 17, Falling edge interrupt
				status = "okay";

				/* Touchpad parameters */
				touchpad-max-x = <250>;
				touchpad-max-y = <200>;
				touchpad-max-pressure = <250>;
			};
		};
	};
};